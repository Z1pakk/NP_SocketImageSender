<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="673*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="364*"/>
        </Grid.RowDefinitions>
        <Button Content="Send" Margin="10" Click="Button_Click" />
        <TextBox x:Name="tbMessage" Grid.Row="1" Grid.Column="1" Margin="5" />
        <Button Click="Button_Click_1" Content="OpenFile" Grid.Column="1" HorizontalAlignment="Left" Margin="5,18,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
